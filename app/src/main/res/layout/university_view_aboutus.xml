<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="13dp">

    <com.nucleustech.mohanoverseas.view.MaxHeightScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:autoLink="web"
            android:text=""
            android:paddingBottom="7dp"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/chat_black" />

    </com.nucleustech.mohanoverseas.view.MaxHeightScrollView>

    <TextView
        android:id="@+id/tv_aboutUs_moreInfo"
        android:layout_width="wrap_content"
        android:text="more info !"
        android:layout_gravity="right"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:textColor="@color/com_facebook_messenger_blue"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Courses"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"></ListView>

</LinearLayout>